<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nomad_mystic_actionbar.actionbar" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Light"
            android:label="@string/title_activity_light"
            android:parentActivityName=".MainActivity"
            android:theme="@style/LightTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.nomad_mystic_actionbar.actionbar.MainActivity" />
        </activity>
        <activity
            android:name=".LightDarkBar"
            android:label="@string/title_activity_light_dark_bar"
            android:parentActivityName=".MainActivity"
            android:theme="@style/LightDarkBarTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.nomad_mystic_actionbar.actionbar.MainActivity" />
        </activity>
        <activity
            android:name=".Dark"
            android:label="@string/title_activity_dark"
            android:parentActivityName=".MainActivity"
            android:theme="@style/DarkTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.nomad_mystic_actionbar.actionbar.MainActivity" />
        </activity>
        <activity
            android:theme="@style/CustomTheme"
            android:name=".Custom"
            android:label="@string/title_activity_custom"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.nomad_mystic_actionbar.actionbar.MainActivity" />
        </activity>
    </application>

</manifest>
